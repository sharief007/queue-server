{
  "title": "QueueServer Configuration",
  "description": "Configuration for QueueServer message broker",
  
  "server": {
    "host": "127.0.0.1",
    "port": 9999,
    "maxConnections": 1000,
    "connectionTimeout": "00:05:00",
    "heartbeatInterval": "00:00:30",
    "receiveBufferSize": 65536,
    "sendBufferSize": 65536
  },
  
  "storage": {
    "dataDirectory": "./storage/data",
    "snapshotDirectory": "./storage/snapshots",
    "snapshotInterval": "00:01:00",
    "maxLogSize": 104857600,
    "syncInterval": "00:00:01",
    "memoryCacheSize": 1000,
    "fsyncOnWrite": true,
    "segmentSize": 100000,
    "batchSize": 65536,
    "batchCount": 100,
    "batchTimeout": "00:00:00.100",
    "compressionEnabled": true,
    "fsyncInterval": "00:00:01"
  },
  
  "topics": {
    "defaultPartitions": 1,
    "maxPartitions": 16,
    "retentionPeriod": "1.00:00:00",
    "maxMessageSize": 1048576,
    "autoCreateTopics": true
  },
  
  "client": {
    "heartbeatInterval": "00:00:30",
    "requestTimeout": "00:00:30",
    "reconnectDelay": "00:00:05",
    "maxRetryAttempts": 3,
    "receiveBufferSize": 65536,
    "sendBufferSize": 65536
  }
}
